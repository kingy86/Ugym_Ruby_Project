<form class="session_edit" action="/sessions/<%= @session.id%>" method="post">

  <label for="name">Name : </label>
  <input type="text" name="name" value="<%= @session.name %>"/>

  <label for="intensity">Intensity : </label>
  <input type="number" name="intensity" value="<%= @session.intensity %>"/>

  <label for="capacity">Capacity : </label>
  <input type="number" name="capacity" value="<%= @session.capacity %>"/>

  <input type="submit" value="Update">
</form>
